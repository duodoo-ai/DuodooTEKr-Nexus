<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 向导视图 -->
        <record id="view_project_selection_wizard_form" model="ir.ui.view">
            <field name="name">project.selection.wizard.form</field>
            <field name="model">project.selection.wizard</field>
            <field name="arch" type="xml">
                <form string="选择项目">
                    <sheet>
                        <group>
                            <field name="selected_projects"
                                   context="{'tree_view_ref': 'odoo_financial_risk.dues_income_expenditure_items_tree_readonly'}"
                                   colspan="4" nolabel="1"
                            />
                        </group>
                        <footer>
                            <button name="action_add_projects" type="object" string="确认添加" class="btn-primary"/>
                            <button string="取消" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
