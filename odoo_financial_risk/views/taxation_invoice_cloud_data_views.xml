<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--已勾选发票（建设)-智税云导出（月底比对账面除旅客运输外的进项税）-->
    <record model="ir.ui.view" id="invoice_construction_cloud_tree">
        <field name="name">已勾选发票.tree</field>
        <field name="model">invoice.construction.cloud</field>
        <field name="arch" type="xml">
            <list string="已勾选发票">
                <field name="name" optional="show"/>
                <field name="invoice_status" optional="show"/>
                <field name="check_identification" optional="show"/>
                <field name="authentication_type" optional="show"/>
                <field name="reason_non_deduction" optional="show"/>
                <field name="check_result" optional="show"/>
                <field name="check_date" optional="show"/>
                <field name="check_person" optional="show"/>
                <field name="invoice_code" optional="show"/>
                <field name="invoice_date" optional="show"/>
                <field name="excluding_tax_amount" optional="show"/>
                <field name="tax_rate" optional="show"/>
                <field name="tax_amount" optional="show"/>
                <field name="deductible_tax_amount" optional="show"/>
                <field name="subtotal_amount" optional="show"/>
                <field name="product_name" optional="show"/>
                <field name="buyers_name" optional="show"/>
                <field name="tax_rate" optional="show"/>
                <field name="buyers_tax" optional="show"/>
                <field name="seller_name" optional="show"/>
                <field name="seller_tax" optional="show"/>
                <field name="note" optional="show"/>
                <field name="receiver" optional="show"/>
                <field name="transferor" optional="show"/>
                <field name="receiver_date" optional="show"/>
                <field name="invoice_purpose" optional="show"/>
                <field name="voucher_code" optional="show"/>
                <field name="voucher_date" optional="show"/>
                <field name="voucher_type" optional="show"/>
                <field name="company_id" optional="hide"/>
                <field name="id" optional="hide"/>
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="invoice_construction_cloud_form">
        <field name="name">已勾选发票.form</field>
        <field name="model">invoice.construction.cloud</field>
        <field name="arch" type="xml">
            <form string="已勾选发票">
                <sheet>
                    <group name="group_one">
                        <group>
                            <field name="name"/>
                            <field name="invoice_status"/>
                            <field name="check_identification"/>
                            <field name="authentication_type"/>
                            <field name="reason_non_deduction"/>
                            <field name="check_result"/>
                            <field name="check_date"/>
                            <field name="check_person"/>
                            <field name="invoice_code"/>
                            <field name="invoice_date"/>
                            <field name="excluding_tax_amount"/>
                            <field name="tax_rate"/>
                            <field name="tax_amount"/>
                            <field name="deductible_tax_amount"/>
                            <field name="subtotal_amount"/>
                        </group>
                        <group>
                            <field name="product_name"/>
                            <field name="buyers_name"/>
                            <field name="buyers_tax"/>
                            <field name="seller_name"/>
                            <field name="seller_tax"/>
                            <field name="receiver"/>
                            <field name="transferor"/>
                            <field name="receiver_date"/>
                            <field name="invoice_purpose"/>
                            <field name="voucher_code"/>
                            <field name="voucher_date"/>
                            <field name="voucher_type"/>
                            <field name="note"/>
                        </group>
                        <field name="company_id" invisible="1"/>
                        <field name="id" invisible="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_invoice_construction_cloud" model="ir.actions.act_window">
        <field name="name">已勾选发票</field>
        <field name="res_model">invoice.construction.cloud</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref=""/>
        <field name="view_ids"
           eval="[(5, 0, 0),
                  (0, 0, {'view_mode': 'list', 'view_id': ref('invoice_construction_cloud_tree')}),
                  (0, 0, {'view_mode': 'form', 'view_id': ref('invoice_construction_cloud_form')}),
                  ]"/>
    </record>
</odoo>